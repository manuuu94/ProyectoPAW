@model FrontEnd.Models.LoginViewModel

@{
    ViewData["Title"] = "Index";
            //Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Iniciar sesion</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
   <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
   <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
@*    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="styles.css">*@
</head>
<style>

html, body {
    background-image: url('https://images.unsplash.com/photo-1632685062337-095b722134ca?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2670&q=80');
    background-size: cover;
    background-repeat: no-repeat;
    height: 100%;
    font-family: 'Numans', sans-serif;
}
</style>
<body>
    
    <div class="container">
        <div class="d-flex justify-content-center h-100">
             <br> <br/>
             <br> <br/>
             <br> <br/>
            <div class="card" style="height:fit-content">
                <div class="card-header">
                    <br />
                    <h3>Inicio de sesión</h3>
                    <div class="d-flex justify-content-end social_icon">
                       
                        <a href="https://www.facebook.com/"><span><i class="fab fa-facebook-square"></i></span></a>
                        <a href="https://twitter.com/home"><span><i class="fab fa-twitter-square"></i></span></a>
                        
                    </div>
                  
                </div>
                <div class="card-body">

        <form asp-action="Validar" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">                                       
                <label asp-for="Username" class="control-label fas fa-user" style="color:white">Usuario</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">                                       
                <label asp-for="Password" class="control-label fas fa-key" style="color:white">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align:center" >
                <input type="submit" value="Entrar" class="btn btn-primary" style="background-color:black;color:white"/>
            </div>
        </form>

                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center">
                        <a> @Html.ActionLink("Olvidé contraseña", "ResetPass", "Login", new { @class = "elements" }) </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section Scripts
{
    <script src="~/Funciones/Login.js"></script>
    <script src="~/Funciones/Generales.js"></script>
     @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

