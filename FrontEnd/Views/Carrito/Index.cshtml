@model IEnumerable<FrontEnd.Models.CarritoViewModel>

@{
    ViewData["Title"] = "Index";
                Layout = "~/Views/Shared/_Internal_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProducto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto)
            </td>
            <td>
                    <div class="form-group" style="text-align: center;">
                        @Html.ActionLink("Eliminar", "EliminarProductoCarrito", new
                    { ID_PROD = item.IdPro},
                    new { @class = "form-control", @style = "width:80px;height:25px;background-color:red;color:white" })
                    </div>
             </td>
           
        </tr>
}
    </tbody>
</table>

<tr>
    <td>
        @Html.ActionLink("Vaciar Carrito", "VaciarCarrito", new { }, new
        { @class = "form-control", @style = "text-align:center;width:auto; height:25px;background-color:red;color:white" })
    </td>
    <td>
        @Html.ActionLink("Confirmar Compra", "ConfirmarCompra", new { }, new
        {
        @class = "form-control",
        @style = "text-align:center;width:auto; height:25px;background-color:green;color:white"
        ,
        onclick = "return validar();"
        })
    </td>
</tr>
